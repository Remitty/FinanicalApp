<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    tools:context=".cash.InfoActivity">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    app:contentPadding="10dp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="10dp"
                            android:background="@color/layoutBackgroundLight">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="USD Account"
                                android:textSize="20dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Account ID"
                                android:textSize="14dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/edit_usd_account"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:paddingHorizontal="10dp"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:editable="false"
                                    android:background="@drawable/rounded_corners_edittext_dark"/>
                                <ImageButton
                                    android:id="@+id/btn_copy_usd_id"
                                    android:layout_width="30dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center_vertical"
                                    android:backgroundTintMode="screen"
                                    android:src="@drawable/ic_copy"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Account Number"
                                android:textSize="14dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/edit_usd_account_number"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="35dp"
                                    android:paddingHorizontal="10dp"
                                    android:editable="false"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:background="@drawable/rounded_corners_edittext_dark"/>
                                <ImageButton
                                    android:id="@+id/btn_copy_usd_account_no"
                                    android:layout_width="30dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center_vertical"
                                    android:backgroundTintMode="screen"
                                    android:src="@drawable/ic_copy"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Routing Number"
                                android:textSize="14dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/edit_usd_routing_number"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:paddingHorizontal="10dp"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:editable="false"
                                    android:background="@drawable/rounded_corners_edittext_dark"/>
                                <ImageButton
                                    android:id="@+id/btn_copy_usd_routing_no"
                                    android:layout_width="30dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center_vertical"
                                    android:backgroundTintMode="screen"
                                    android:src="@drawable/ic_copy"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:contentPadding="10dp"
                    android:elevation="5dp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="10dp"
                            android:background="@color/layoutBackgroundLight">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="EUR Account"
                                android:textSize="20dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Account ID"
                                android:textSize="14dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/edit_eur_account"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_weight="1"
                                    android:paddingHorizontal="10dp"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:editable="false"
                                    android:background="@drawable/rounded_corners_edittext_dark"/>
                                <ImageButton
                                    android:id="@+id/btn_copy_eur_id"
                                    android:layout_width="30dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center_vertical"
                                    android:backgroundTintMode="screen"
                                    android:src="@drawable/ic_copy"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="IBAN"
                                    android:textSize="14dp"/>
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn_assign"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dp"
                                    android:gravity="right"
                                    android:text="Assign"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/edit_eur_iban"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_weight="1"
                                    android:paddingHorizontal="10dp"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:editable="false"
                                    android:background="@drawable/rounded_corners_edittext_dark"/>
                                <ImageButton
                                    android:id="@+id/btn_copy_eur_iban"
                                    android:layout_width="30dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center_vertical"
                                    android:backgroundTintMode="screen"
                                    android:src="@drawable/ic_copy"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="SWIFT"
                                android:textSize="14dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/edit_eur_swift"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_weight="1"
                                    android:paddingHorizontal="10dp"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:editable="false"
                                    android:background="@drawable/rounded_corners_edittext_dark"/>
                                <ImageButton
                                    android:id="@+id/btn_copy_eur_swift"
                                    android:layout_width="30dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center_vertical"
                                    android:backgroundTintMode="screen"
                                    android:src="@drawable/ic_copy"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:contentPadding="10dp"
                    android:elevation="5dp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="10dp"
                            android:background="@color/layoutBackgroundLight">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="GBP Account"
                                android:textSize="20dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Account ID"
                                android:textSize="14dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/edit_gbp_account"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_weight="1"
                                    android:paddingHorizontal="10dp"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:editable="false"
                                    android:background="@drawable/rounded_corners_edittext_dark"/>
                                <ImageButton
                                    android:id="@+id/btn_copy_gbp_id"
                                    android:layout_width="30dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center_vertical"
                                    android:backgroundTintMode="screen"
                                    android:src="@drawable/ic_copy"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Account Number"
                                android:textSize="14dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/edit_gbp_account_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_weight="1"
                                    android:paddingHorizontal="10dp"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:editable="false"
                                    android:background="@drawable/rounded_corners_edittext_dark"/>
                                <ImageButton
                                    android:id="@+id/btn_copy_gbp_account_no"
                                    android:layout_width="30dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center_vertical"
                                    android:backgroundTintMode="screen"
                                    android:src="@drawable/ic_copy"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sort Code"
                                android:textSize="14dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/edit_gbp_sort_code"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_weight="1"
                                    android:paddingHorizontal="10dp"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:editable="false"
                                    android:background="@drawable/rounded_corners_edittext_dark"/>
                                <ImageButton
                                    android:id="@+id/btn_copy_gbp_sort"
                                    android:layout_width="30dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center_vertical"
                                    android:backgroundTintMode="screen"
                                    android:src="@drawable/ic_copy"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
</LinearLayout>