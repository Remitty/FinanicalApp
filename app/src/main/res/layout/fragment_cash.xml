<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.CashFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="0dp"
                android:paddingVertical="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Wallet"
                        android:textColor="@color/darkBlue"
                        android:textSize="12dp" />
                    <com.kassisdion.library.ViewPagerWithIndicator
                        android:id="@+id/viewPagerWithIndicator"
                        app:arrow.enable="true"
                        app:arrow.width="30dp"
                        app:arrow.height="30dp"
                        app:left_arrow.drawable="@drawable/ic_arrow_left"
                        app:right_arrow.drawable="@drawable/ic_arrow_right"
                        app:round.enable="false"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="30dp"
                        android:visibility="gone">
                        <com.kassisdion.library.ViewPagerWrapContent
                            android:id="@+id/viewPager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.kassisdion.library.ViewPagerWithIndicator>
                    <TextView
                        android:id="@+id/no_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"
                        android:text="No wallet"
                        android:textSize="18dp"
                        android:textColor="@color/darkBlue"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp">
                    <LinearLayout
                        android:id="@+id/layout_account"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_accounting"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Accounts"
                            android:textSize="11dp"
                            android:textColor="@color/gray_text"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_add"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_add" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Add"
                            android:textSize="11dp"
                            android:textColor="@color/gray_text"/>
                        <Spinner
                            android:id="@+id/add_currency_spinner"
                            android:layout_gravity="center_horizontal"
                            android:background="@null"
                            android:paddingHorizontal="5dp"
                            android:layout_height="0dp"
                            android:layout_width="wrap_content"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_send"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_send"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Send"
                            android:textSize="11dp"
                            android:textColor="@color/gray_text"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_bank"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bank"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Bank"
                            android:textSize="11dp"
                            android:textColor="@color/gray_text"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_contact"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_user"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Contact"
                            android:textSize="11dp"
                            android:textColor="@color/gray_text"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/money_transaction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</LinearLayout>