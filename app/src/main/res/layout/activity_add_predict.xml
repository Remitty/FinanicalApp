<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".predict.AddPredictActivity"
    android:layout_marginVertical="0dp"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                app:cardCornerRadius="15dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USDC balance"
                        android:textColor="@color/colorBlack"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/usdc_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/green"
                        android:textSize="30dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                app:cardCornerRadius="15dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                            android:id="@+id/symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:text="AAPL"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="aapl"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack"/>
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="aapl"
                            android:textSize="15dp"
                            android:textColor="@color/colorBlack"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estimate type"
                                android:textSize="12dp"/>
                            <RadioGroup
                                android:id="@+id/rdg_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/rdb_bigger"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Higher than"
                                    android:textSize="12dp"/>

                                <RadioButton
                                    android:id="@+id/rdb_same"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Not change"
                                    android:textSize="12dp"/>
                                <RadioButton
                                    android:id="@+id/rdb_smaller"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Lower than"
                                    android:textSize="12dp"/>
                            </RadioGroup>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Prediction price rate ($)"
                                android:textSize="10dp"/>

                            <EditText
                                android:id="@+id/edit_est_price"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:inputType="numberDecimal"
                                android:paddingLeft="5dp"
                                android:maxLines="1"
                                android:background="@drawable/rounded_corner_white_rectangle_border_grey"
                                android:textColor="@color/colorBlack"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:hint="0.0"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="0dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Prediction duration"
                                    android:textSize="12dp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    android:orientation="horizontal">
                                    <com.google.android.material.button.MaterialButtonToggleGroup
                                        android:id="@+id/btn_group1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:singleSelection="true"
                                        app:selectionRequired="true"
                                        android:showDividers="middle"
                                        app:checkedButton="@+id/btn_48hrs"
                                        >
                                        <Button
                                            android:id="@+id/btn_48hrs"
                                            android:visibility="gone"
                                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:backgroundTint="@color/colorGray"
                                            android:layout_marginHorizontal="2dp"
                                            android:text="48h"
                                            android:textColor="@color/colorBlack"
                                            android:textStyle="bold"
                                            android:textSize="11dp"/>

                                        <Button
                                            android:id="@+id/btn_1w"
                                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:backgroundTint="@color/colorGray"
                                            android:layout_marginHorizontal="2dp"
                                            android:text="1w"
                                            android:textColor="@color/colorBlack"
                                            android:textStyle="bold"
                                            android:textSize="11dp"/>
                                        <Button
                                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                            android:id="@+id/btn_2w"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_marginHorizontal="2dp"
                                            android:layout_height="40dp"
                                            android:backgroundTint="@color/colorGray"
                                            android:text="2w"
                                            android:textColor="@color/colorBlack"
                                            android:textStyle="bold"
                                            android:textSize="11dp"/>
                                        <Button
                                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                            android:id="@+id/btn_3w"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:backgroundTint="@color/colorGray"
                                            android:layout_marginHorizontal="2dp"
                                            android:text="3w"
                                            android:textColor="@color/colorBlack"
                                            android:textStyle="bold"
                                            android:textSize="11dp"/>
                                        <Button
                                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                            android:id="@+id/btn_4w"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_marginHorizontal="2dp"
                                            android:layout_height="40dp"
                                            android:backgroundTint="@color/colorGray"
                                            android:text="4w"
                                            android:textColor="@color/colorBlack"
                                            android:textStyle="bold"
                                            android:textSize="11dp"/>
                                        <Button
                                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                            android:id="@+id/btn_5w"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_marginHorizontal="2dp"
                                            android:layout_height="40dp"
                                            android:backgroundTint="@color/colorGray"
                                            android:text="5w"
                                            android:textColor="@color/colorBlack"
                                            android:textStyle="bold"
                                            android:textSize="11dp"/>
                                    </com.google.android.material.button.MaterialButtonToggleGroup>

                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Put bet amount (USDC)"
                                android:textSize="10dp"/>
                            <EditText
                                android:id="@+id/edit_bet_price"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:inputType="numberDecimal"
                                android:background="@drawable/rounded_corner_white_rectangle_border_grey"
                                android:maxLines="1"
                                android:paddingLeft="5dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:hint="0.0"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal">
                                <Button
                                    android:id="@+id/btn_10"
                                    android:layout_width="70dp"
                                    android:layout_height="40dp"
                                    android:backgroundTint="@color/colorGray"
                                    android:layout_marginHorizontal="5dp"
                                    android:text="25"
                                    />
                                <Button
                                    android:id="@+id/btn_50"
                                    android:layout_width="70dp"
                                    android:layout_height="40dp"
                                    android:backgroundTint="@color/colorGray"
                                    android:layout_marginHorizontal="5dp"
                                    android:text="50"
                                    />
                                <Button
                                    android:id="@+id/btn_100"
                                    android:layout_width="70dp"
                                    android:layout_height="40dp"
                                    android:backgroundTint="@color/colorGray"
                                    android:layout_marginHorizontal="5dp"
                                    android:text="100"
                                    />
                                <Button
                                    android:id="@+id/btn_200"
                                    android:layout_width="70dp"
                                    android:layout_height="40dp"
                                    android:backgroundTint="@color/colorGray"
                                    android:layout_marginHorizontal="5dp"
                                    android:text="200"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_create"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/colorRedCrayon"
                        android:layout_marginTop="30dp"
                        android:layout_marginHorizontal="40dp"
                        app:cornerRadius="20dp"
                        android:text="Create"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>